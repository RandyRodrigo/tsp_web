---
interface Props {
    class?: string;
    title: string;
}
const { title } = Astro.props;
---

<article class={`
  ${Astro.props.class}
  col-span-12
  relative rounded-xl
  backdrop-blur-md
  border border-black/10
  shadow-inner shadow-black/10
  overflow-hidden
  group
  
`}>
    <div 
        class="absolute z-10 bottom-0 top-0 w-full h-full
        bg-gradient-to-b from-transparent from-40% via-[#ff0d00]/10 to-[#ff0d00]/55">
    </div>
    <slot name="image"></slot>
    <div class="relative select-none flex flex-col gap-1 p-2 md:p-6 text-lg z-20 justify-end h-full">
        <h2 class="text-2xl font-semibold text-balance mb-4 text-white">{title}</h2>
        <slot name="content"></slot>
    </div>
    </article>

 