---
import Facebook from "@/assets/svg/facebook.svg";
import Instagram from "@/assets/svg/instagram.svg";
import Youtube from "@/assets/svg/youtube.svg";
import Whatsapp from "@/assets/svg/whatsapp.svg";
import Link from "@/components/Link.astro";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/utils";
import { getI18N } from "@/i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="bg-black/100">
  <div class="mx-auto w-full max-w-screen-xl p-4 px-6 py-6 lg:py-8">
    <div class="md:flex md:justify-between">
      <div class="mb-6 flex flex-col md:mb-0">
        <a href="/" class="-mt-14 flex items-center justify-center">
          <img class="h-auto w-35" src="/images/logoTSP.png" width="100" alt="TSP-Negocios" />
        </a>
        <div class="mt-6 flex justify-center gap-x-6 text-white">
          <h2>{i18n.FOOTER.REDES}</h2>
        </div>
        <div class="mt-6 flex justify-center gap-x-6">
          <a href="https://www.youtube.com/channel/UCp_airdP3K8eM4EGJhqtKWQ" target="_blank" class="text-white hover:text-yellow-300 hover:scale-125 transition"><Youtube /></a>
          <a href="https://www.instagram.com/tspnegocios/" target="_blank" class="text-white hover:scale-125 transition hover:text-primary duration-300"><Instagram /></a>
          <a href="https://wa.me/+51908915072" target="_blank" class="text-white hover:scale-125 transition hover:text-primary duration-300"><Whatsapp /></a>
          <a href="https://www.facebook.com/tspnegociosoficial" target="_blank" class="text-white hover:scale-125 transition hover:text-primary duration-300"><Facebook /></a>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 sm:gap-6">
        <div>
          <h2 class="mb-6 text-sm font-semibold uppercase text-white">
            {i18n.FOOTER.LEGAL.TITLE}
          </h2>
          <ul class="flex flex-col gap-2 font-medium text-white">
            <li>
              <Link
                href={translatePath('/aviso-legal/')}
                class="hover:underline hover:text-primary duration-300 text-white"
                >
                {t('nav.legal')}
              </Link>
            </li>
            <li>
              <Link
                href={translatePath('/privacidad/')}
                class="hover:underline hover:text-primary duration-300 text-white"
                >
                {t('nav.privacidad')}
              </Link>
            </li>
            <li>
              <Link
                href={translatePath('/cookies/')}
                class="hover:underline hover:text-primary duration-300 text-white"
              >
                {t('nav.cookies')}
              </Link>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold uppercase text-white">
            {i18n.FOOTER.WEB_MAP.TITLE}
          </h2>
          <ul class="flex flex-col gap-2 font-medium text-white">
            <li>
              <Link
                href={translatePath('/')}
                class="hover:underline hover:text-primary duration-300"
                >
                {t('nav.inicio')}
              </Link>
            </li>
            <li>
              <Link
                href={translatePath('/servicio/')}
                class="hover:underline hover:text-primary duration-300"
                >
                {t('nav.servicio')}
            </Link>
            </li>
            <li>
              <Link
                href={translatePath('/archivo/')}
                class="hover:underline hover:text-primary duration-300"
                >
                {t('nav.archivo')}
              </Link>
            </li>
          </ul>
        </div>
        <div>
            <h2 class="mb-0 text-sm font-semibold uppercase text-white">
              {i18n.FOOTER.PRODUCED_BY}
            </h2>
            <a
              class="hover:opacity-100 opacity-70 transition-opacity duration-300 block"
              href={translatePath('/')}
              rel="noreferrer"
            >
            <img class="size-25" loading="lazy" src="/images/logoTSP.svg" alt="Logo TSP-Negocios" />
            </a>
          </div>
      </div>
    </div>
    <hr class="my-6 border-white/10 sm:mx-auto lg:my-8"/>
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-400 sm:text-center text-white"
        >&copy;&nbsp;{new Date().getFullYear()}&nbsp;{i18n.FOOTER.DISCLAIMER}
      </span>
      <div class="mt-4 flex sm:mt-0 sm:justify-center">
        <a
          href="https://github.com/RandyRodrigo" target="_blank"
          class="text-gray-500 hover:text-white ms-5 duration-300"
        >
          <svg
            class="h-4 w-4"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="sr-only">GitHub account</span>
        </a>
      </div>
    </div>
  </div>
</footer>
