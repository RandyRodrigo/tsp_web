---
import { getI18N } from '../i18n';
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
import Button from "./Button.astro";
---
<header id="header-nav" class="fixed w-screen py-3 z-50 top-0 lg:px-0">
    <div class="grid [grid-template-columns:40px_repeat(2,1fr)] sm:grid-cols-3 max-w-7xl mx-auto p-1 items-center justify-between">
        <a class="hover:opacity-100 opacity-70 transition-opacity duration-300 block" href="/">
            <img class="" src="/images/logoTSP.svg" width="100" alt="TSP-Negocios"/>
        </a>
        <nav class="col-span-1 w-full flex gap-5 justify-end md:justify-center">
            <a class="text__glowing" href="#">{i18n.HEADER_1}</a>
            <a class="text__glowing" href="#">{i18n.HEADER_2}</a>
        </nav>
        <Button class="justify-self-end lg:text-base" url="https://wa.me/+51908915072" target='_blank'>{i18n.HEADER_BUTTON}</Button>
    </div>
</header>