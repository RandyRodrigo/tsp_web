---
import { getI18N } from '../i18n';
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---
<section class="relative z-10 mx-auto my-24 max-w-[70ch] text-pretty px-6 text-left text-xl sm:px-20">
    <img class="m-auto w-60 mb-10" src="/images/logotspn.png" alt="Logo TSPNegocios"/>

    <h1 class="mx-auto mb-10 text-wrap text-center text-4xl font-semibold tracking-wide">
        {i18n.INTRO_TITLE}
    </h1>
    <p set:html={i18n.INTRO_DESCRIPTION_1}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_2}></p>
</section>

