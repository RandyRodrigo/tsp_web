---
import { getI18N } from '@/i18n';
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---
<section class="relative z-10 mx-auto my-24 max-w-[100ch] text-pretty px-6 text-center text-xl sm:px-20 animated animatedFadeInUp fadeInUp">
    <h1 class="mx-auto mb-15 text-wrap text-center text-5xl font-semibold tracking-wide">
        {i18n.INTRO_TITLE}
    </h1>
    <div class="grid gap-8 md:grid-cols-2">
        <img class="w-full h-full  mx-auto mb-10 rounded-3xl object-cover" src="/images/intro.jpg" alt="Intro TSP"/>
        <div class="flex flex-col items-center justify-center gap-4 text-center">
            <p set:html={i18n.INTRO_DESCRIPTION_1}></p>
            <p set:html={i18n.INTRO_DESCRIPTION_2}></p>
        </div>
    </div>  
</section>

