---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from '@/i18n/index';
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({currentLocale});
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---
<Layout
    title="Contacto"
    description="Contáctanos para más información sobre nuestros servicios de desarrollo de software a la medida y soluciones tecnológicas."
  >
  <section class="text-white min-h-screen animate-duration-[2s] animate-ease-in-out animate-fade">
    <!-- Imagen de fondo con overlay (solo cubre la parte superior) -->
    <div class="absolute inset-0 bottom-auto h-[60vh] z-0 ">
      <img 
        src="/images/Liderazgo.webp" 
        alt="" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/60"></div>
    </div>
  
    <!-- Contenido principal -->
    <div class="relative z-10 container mx-auto px-4 py-30 animated animatedFadeInUp fadeInUp">
      <!-- Encabezado -->
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">{i18n.CONTACT_TITLE}</h2>
        <p class="max-w-2xl mx-auto text-gray-300">
          {i18n.CONTACT_SUBTITLE}
        </p>
      </div>
  
      <!-- Formulario de contacto -->
      <div class="max-w-3xl mx-auto bg-white rounded-lg p-8 text-gray-800 mb-16 border border-red-300">
        <form class="space-y-6" action="https://formsubmit.co/ventas@grupotsp.pe" method="POST" >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="first-name" class="block mb-2 text-sm font-medium">{i18n.CONTACT.NAME}</label>
              <input 
                type="text" 
                id="first-name"
                name="first-name"
                required
                placeholder="Tsp" 
                class="w-full px-4 py-2.5 border border-red-500 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
              />
            </div>
            <div>
              <label for="last-name" class="block mb-2 text-sm font-medium">{i18n.CONTACT.LASTNAME}</label>
              <input 
                type="text" 
                id="last-name"
                name="last-name"
                required
                placeholder="Negocios" 
                class="w-full px-4 py-2.5 border border-red-500 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
              />
            </div>
          </div>
  
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block mb-2 text-sm font-medium">{i18n.CONTACT.EMAIL}</label>
              <input 
                type="email" 
                id="email"
                name="email"
                required
                placeholder="ventas@grupotsp.pe" 
                class="w-full px-4 py-2.5 border border-red-500 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
              />
            </div>
            <div>
              <label for="phone" class="block mb-2 text-sm font-medium">{i18n.CONTACT.PHONE_NUMBER}</label>
              <input 
                type="number" 
                id="phone"
                required
                name="phone"
                placeholder="+51 912 073 246" 
                class="w-full px-4 py-2.5 border border-red-500 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 no-arrow"
              />
            </div>
          </div>
  
          <div>
            <label for="message" class="block mb-2 text-sm font-medium">{i18n.CONTACT.MESSAGE}</label>
            <textarea 
              id="message" 
              rows="6"
              required
              name="message"
              placeholder={i18n.CONTACT_PLACEHOLDER} 
              class="w-full px-4 py-2.5 border border-red-500 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
            ></textarea>
          </div>
  
          <div class="text-sm text-gray-600">
            {i18n.CONTACT.TERMS_OF_USE_1}
            <a href={translatePath('/aviso-legal/')} class="text-red-500 hover:underline">{i18n.CONTACT.TERMS_OF_USE_2}</a>{i18n.CONTACT.TERMS_OF_USE_3}
            <a href={translatePath('/privacidad/')} class="text-red-500 hover:underline">{i18n.CONTACT.TERMS_OF_USE_4}</a>{i18n.CONTACT.TERMS_OF_USE_5}
          </div>
  
          <div>
            <button 
              type="submit" 
              class="px-5 py-2.5 bg-red-500 hover:bg-red-700 text-white font-medium rounded-lg transition-colors"
            >
              {i18n.CONTACT.BUTTON_SEND}
            </button>
            
            <input type="hidden" name="_captcha" value="false">
          </div>
          <input type="hidden" name="_next" value="http://localhost:4321/">
        </form>
      </div>
  
      <!-- Información de contacto -->
      <div class="bg-gray-100 rounded-xl">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Email -->
          <div class="p-6 rounded-lg text-center">
            <div class="flex justify-center mb-4">
              <div class="p-3 bg-red-500 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-rojo">{i18n.CONTACT_EMAIL_US}</h2>
            <p class="text-black mb-4">{i18n.CONTACT_EMAIL_US_CONTENT}</p>
            <a href="mailto:ventas@grupotsp.pe" class="text-red-500 hover:underline">ventas@grupotsp.pe</a>
          </div>
    
          <!-- Call -->
          <div class="p-6 rounded-lg text-center">
            <div class="flex justify-center mb-4">
              <div class="p-3 bg-red-500 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-rojo">{i18n.CONTACT_CALL_US}</h2>
            <p class="text-black mb-4">{i18n.CONTACT_CALL_US_CONTENT}</p>
            <a href="tel:+51912073246" class="text-red-500 hover:underline">+51 912 073 246</a>
          </div>
    
          <!-- Location -->
          <div class="p-6 rounded-lg text-center">
            <div class="flex justify-center mb-4">
              <div class="p-3 bg-red-500 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
            </div>
            <h2 class="text-xl font-semibold mb-2 text-rojo">{i18n.CONTACT_ADDRESS}</h2>
            <p class="text-black mb-4">{i18n.CONTACT_ADDRESS_CONTENT}</p>
            <a href="https://maps.app.goo.gl/2rH1d2LjLLw6sJjN8" target="_blank" class="text-red-500 hover:underline">Av. Universitaria Cuadra 59 Mz 26 Lote 16, Los Olivos</a>
          </div>
        </div>
      </div> 
      
      <div class="flex justify-center mt-8">
        <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3903.125983387301!2d-77.076830324022!3d-11.965778340400002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105cf15f0fd07cd%3A0x6526b38b1b52bcc6!2sTSPNEGOCIOS!5e0!3m2!1ses!2spe!4v1745448399907!5m2!1ses!2spe" 
        width="1500" 
        height="600" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded-2xl border border-red-500"
        >
      </iframe>
      </div>
    </div>
    
  </section>
</Layout>

<style>
  .no-arrow {
    -moz-appearance: input;
  }
  .no-arrow::-webkit-inner-spin-button {
    display: none;
  }
  .no-arrow::-webkit-outer-spin-button,
  .no-arrow::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>
